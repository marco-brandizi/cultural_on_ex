    <ds:definizione>decorazione pittorica</ds:definizione>
    <ds:autore>Luini, Aurelio (1530-1592 ca.)</ds:autore>
    <ds:epoca>1560</ds:epoca>
    <ds:provincia>Varese</ds:provincia>
