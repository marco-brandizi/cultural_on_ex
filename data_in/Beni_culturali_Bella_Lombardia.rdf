    <ds:denominazione>Chiesa di S. Pietro in Gessate</ds:denominazione>
    <ds:definizione>chiesa</ds:definizione>
    <ds:autore>Solari, Guiniforte (ampliamento)</ds:autore>
    <ds:epoca>1460 - 1476</ds:epoca>
    <ds:provincia>Milano</ds:provincia>
    <ds:siglaprovincia>MI</ds:siglaprovincia>
    <ds:comune>Milano</ds:comune>
    <ds:codicecomune>015146</ds:codicecomune>
