    <ds:denominazione>Villa Mina della Scala</ds:denominazione>
    <ds:definizione>villa</ds:definizione>
    <ds:epoca>1595 ca. - 1735</ds:epoca>
    <ds:provincia>Cremona</ds:provincia>
    <ds:siglaprovincia>CR</ds:siglaprovincia>
