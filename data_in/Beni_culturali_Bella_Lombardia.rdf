    <ds:denominazione>Motivi decorativi vegetali a festoni con nastri</ds:denominazione>
    <ds:definizione>decorazione pittorica</ds:definizione>
    <ds:autore>bottega lombarda</ds:autore>
    <ds:epoca>1580 - 1590</ds:epoca>
