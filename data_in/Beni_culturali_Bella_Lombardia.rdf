    <ds:categoria>Apparati Decorativi</ds:categoria>
    <ds:denominazione>Motivi decorativi floreali</ds:denominazione>
    <ds:definizione>dipinto</ds:definizione>
    <ds:autore>bottega lombarda</ds:autore>
    <ds:epoca>1465 - 1470</ds:epoca>
    <ds:provincia>Varese</ds:provincia>
    <ds:siglaprovincia>VA</ds:siglaprovincia>
