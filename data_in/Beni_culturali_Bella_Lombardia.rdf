    <ds:definizione>santuario</ds:definizione>
    <ds:autore>De' Fondulis, Agostino (costruzione)</ds:autore>
    <ds:epoca>1513 - 1525</ds:epoca>
    <ds:provincia>Cremona</ds:provincia>
    <ds:siglaprovincia>CR</ds:siglaprovincia>
